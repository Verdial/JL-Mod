<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="bg_config_card">@drawable/bg_config_card</item>
        <item name="textColorPrimary">@color/text_primary</item>
        <item name="textColorSecondary">@color/text_secondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="FilePickerTheme" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
        <item name="nnf_separator_color">@color/nnf_separator_color</item>
        <item name="nnf_save_icon_color">?attr/colorAccent</item>
        <item name="nnf_dir_icon_color">?attr/colorAccent</item>
        <item name="nnf_list_item_divider">?attr/dividerHorizontal</item>

        <!-- These are important. Handled by toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ConfigTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#b0b0b0</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="elevation">1dp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">?colorAccent</item>
    </style>

    <style name="TextViewVendor" parent="Widget.AppCompat.TextView" />

</resources>
